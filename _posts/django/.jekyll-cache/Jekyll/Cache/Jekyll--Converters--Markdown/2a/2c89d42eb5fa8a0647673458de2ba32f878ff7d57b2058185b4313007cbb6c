    <span class="n">queryset</span> <span class="o">=</span> <span class="bp">self</span><span class="p">.</span><span class="n">get_queryset</span><span class="p">()</span>
    <span class="nb">filter</span> <span class="o">=</span> <span class="p">{}</span>
    <span class="k">for</span> <span class="n">field</span> <span class="ow">in</span> <span class="bp">self</span><span class="p">.</span><span class="n">multiple_lookup_fields</span><span class="p">:</span>

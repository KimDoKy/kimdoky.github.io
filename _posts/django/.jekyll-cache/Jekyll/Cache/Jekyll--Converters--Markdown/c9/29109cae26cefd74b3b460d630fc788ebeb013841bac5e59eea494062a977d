    <span class="k">class</span> <span class="nc">Meta</span><span class="p">:</span>
        <span class="n">model</span> <span class="o">=</span> <span class="n">Flavor</span>


<span class="c1"># ì»¤ìŠ¤í…€í¼ì„ ë·°ì— ì¶”ê°€
